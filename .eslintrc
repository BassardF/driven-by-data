{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "react/prefer-stateless-function": [0, { "ignorePureComponents": <ignorePureComponents> }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "arrow-parens": 0,
    "no-unused-state": 0,
    "react/forbid-prop-types": 0,
  },
  "env": {
    "jest": true,
    "es6": true,
    "browser": true
  }
}
